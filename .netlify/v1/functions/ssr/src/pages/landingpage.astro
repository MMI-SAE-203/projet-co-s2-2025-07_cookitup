---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import { Image } from "astro:assets";
import heroImage from "../assets/img/landingpage/hero.webp";
import duTempsIcon from "../assets/img/landingpage/landing_page_dutemps.png";
import delArgentIcon from "../assets/img/landingpage/landingpage_delargent.png";
import personnalisationIcon from "../assets/img/landingpage/landing_page_personnalisation.png";
import engagementIcon from "../assets/img/landingpage/landing_page_unengagement.png";
import entreeImage from "../assets/img/landingpage/entree.webp";
import platImage from "../assets/img/landingpage/plat.webp";
import dessertImage from "../assets/img/landingpage/dessert.webp";
import contactImage from "../assets/img/landingpage/amo_fif_sm5rskv1emq_unsplash_1x.webp";
import melvynImage from "../assets/img/landingpage/melvyn-philippon.png";
import ethanImage from "../assets/img/landingpage/ethan-omasta-parisot.png";
import titouanImage from "../assets/img/landingpage/titouan-winkel.png";
---

<Layout title="Cookit-UP | Mangez bien, mangez local">
    <!-- Hero Section -->
    <section
        class="relative h-[500px] md:h-[600px] overflow-hidden flex items-center"
    >
        <!-- Image de fond avec composant Astro -->
        <Image
            src={heroImage || "/placeholder.svg"}
            alt="Plats délicieux sur table"
            class="absolute inset-0 w-full h-full object-cover z-0"
        />
        <div class="absolute inset-0 bg-black bg-opacity-40 z-10"></div>

        <div
            class="relative z-20 h-full flex items-center px-6 md:px-12 lg:px-24 w-full"
        >
            <div
                class="flex justify-between items-center w-full max-w-7xl mx-auto"
            >
                <!-- Texte à gauche -->
                <div class="max-w-2xl">
                    <h1
                        class="hero-main-text text-white text-5xl md:text-6xl lg:text-7xl mb-6 leading-tight uppercase tracking-wide font-black"
                    >
                        <span class="text-white">NE PAS</span><br />
                        <span class="text-yellow-400">GASPILLER</span>
                        <span class="text-white">C'EST</span><br />
                        <span class="text-white">AUSSI BIEN</span>
                        <span class="text-yellow-400">MANGER</span>
                    </h1>
                    <p
                        class="text-white text-xl md:text-2xl mb-8 max-w-xl font-medium"
                    >
                        Des recettes simple et rapide pour satisfaire petits et
                        grands
                    </p>
                </div>

                <!-- Bouton à droite -->
                <div class="hidden md:block">
                    <a
                        href="/inscription"
                        class="inline-block border-2 border-green-600 text-white bg-transparent px-8 py-4 rounded-full hover:bg-green-600 hover:text-white transition-all duration-300 font-bold text-lg uppercase tracking-wide"
                    >
                        Inscrivez-vous
                    </a>
                </div>
            </div>

            <!-- Bouton mobile centré en bas -->
            <div
                class="md:hidden absolute bottom-8 left-1/2 transform -translate-x-1/2"
            >
                <a
                    href="/inscription"
                    class="inline-block border-2 border-green-600 text-white bg-transparent px-8 py-4 rounded-full hover:bg-green-600 hover:text-white transition-all duration-300 font-bold text-lg uppercase tracking-wide"
                >
                    Inscrivez-vous
                </a>
            </div>
        </div>
    </section>

    <!-- Why Choose Us Section -->
    <section id="qualite" class="py-16 px-6 md:px-12 lg:px-24 bg-gray-100">
        <h2
            class="text-3xl md:text-4xl font-black text-center mb-16 text-black uppercase tracking-wide"
        >
            POURQUOI CHOISIR COOKIT-UP ?
        </h2>

        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl mx-auto"
        >
            <!-- DU TEMPS -->
            <div class="bg-white rounded-lg p-6 text-center shadow-lg">
                <div
                    class="w-16 h-16 bg-green-600 rounded-full flex items-center justify-center mx-auto mb-4"
                >
                    <Image
                        src={duTempsIcon || "/placeholder.svg"}
                        alt="Du temps"
                        class="w-8 h-8"
                    />
                </div>
                <h3 class="text-lg font-bold mb-3 text-black uppercase">
                    DU TEMPS
                </h3>
                <p class="text-sm text-gray-700 leading-relaxed">
                    Transformez facilement les ingrédients de votre frigo en
                    recettes savoureuses. Réduisez le gaspillage alimentaire en
                    utilisant ce que vous avez sous la main.
                </p>
            </div>

            <!-- DE L'ARGENT -->
            <div class="bg-white rounded-lg p-6 text-center shadow-lg">
                <div
                    class="w-16 h-16 bg-green-600 rounded-full flex items-center justify-center mx-auto mb-4"
                >
                    <Image
                        src={delArgentIcon || "/placeholder.svg"}
                        alt="De l'argent"
                        class="w-8 h-8"
                    />
                </div>
                <h3 class="text-lg font-bold mb-3 text-black uppercase">
                    DE L'ARGENT
                </h3>
                <p class="text-sm text-gray-700 leading-relaxed">
                    Fini les repas hors de prix ! Cuisinez malin avec des
                    recettes simples et économiques. Profitez de réductions
                    exclusives grâce à nos partenariats avec des commerces
                    locaux.
                </p>
            </div>

            <!-- PERSONNALISATION -->
            <div class="bg-white rounded-lg p-6 text-center shadow-lg">
                <div
                    class="w-16 h-16 bg-green-600 rounded-full flex items-center justify-center mx-auto mb-4"
                >
                    <Image
                        src={personnalisationIcon || "/placeholder.svg"}
                        alt="Personnalisation"
                        class="w-8 h-8"
                    />
                </div>
                <h3 class="text-lg font-bold mb-3 text-black uppercase">
                    PERSONNALISATION
                </h3>
                <p class="text-sm text-gray-700 leading-relaxed">
                    Indiquez vos objectifs et suivez vos calories facilement.
                    Obtenez des repas équilibrés et adaptés à votre régime
                    alimentaire.
                </p>
            </div>

            <!-- UN ENGAGEMENT -->
            <div class="bg-white rounded-lg p-6 text-center shadow-lg">
                <div
                    class="w-16 h-16 bg-green-600 rounded-full flex items-center justify-center mx-auto mb-4"
                >
                    <Image
                        src={engagementIcon || "/placeholder.svg"}
                        alt="Un engagement"
                        class="w-8 h-8"
                    />
                </div>
                <h3 class="text-lg font-bold mb-3 text-black uppercase">
                    UN ENGAGEMENT
                </h3>
                <p class="text-sm text-gray-700 leading-relaxed">
                    Partagez vos recettes et découvrez celles des autres
                    étudiants. Rejoignez un mouvement pour mieux manger et
                    gaspiller moins.
                </p>
            </div>
        </div>
    </section>

    <!-- Recipes Section -->
    <section class="bg-red-400 py-16 px-6 md:px-12 lg:px-24 text-white">
        <h2
            class="text-2xl md:text-3xl font-black text-center mb-6 uppercase tracking-wide"
        >
            UN LARGE CHOIX DE NOURRITURE POUR TOUS
        </h2>
        <p class="text-center max-w-3xl mx-auto mb-12 text-base">
            Nous identifions rapidement une possibilité d'adaptation à vos
            goûts, avec une expérience de notre cuisine au quotidien.
        </p>

        <div
            class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-12 max-w-4xl mx-auto"
        >
            <div class="relative overflow-hidden rounded-lg">
                <Image
                    src={entreeImage || "/placeholder.svg"}
                    alt="Entrée"
                    class="w-full h-48 object-cover"
                />
            </div>

            <div class="relative overflow-hidden rounded-lg">
                <Image
                    src={platImage || "/placeholder.svg"}
                    alt="Plat principal"
                    class="w-full h-48 object-cover"
                />
            </div>

            <div class="relative overflow-hidden rounded-lg">
                <Image
                    src={dessertImage || "/placeholder.svg"}
                    alt="Dessert"
                    class="w-full h-48 object-cover"
                />
            </div>
        </div>

        <div class="flex justify-center">
            <a
                href="/recette-plat"
                class="border-2 border-white text-white rounded-full px-8 py-3 text-center hover:bg-white hover:text-red-400 transition-colors font-bold"
            >
                Consultez nos recettes
            </a>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="flex flex-col lg:flex-row">
        <div class="w-full lg:w-1/2">
            <Image
                src={contactImage || "/placeholder.svg"}
                alt="Ingrédients de cuisine"
                class="w-full h-full object-cover min-h-[400px]"
            />
        </div>

        <div class="w-full lg:w-1/2 bg-white p-8 lg:p-12">
            <h2
                class="text-2xl md:text-3xl font-black mb-8 text-black uppercase tracking-wide"
            >
                CONTACTEZ-NOUS POUR PLUS D'INFORMATIONS
            </h2>

            <form id="contact-form" class="space-y-6">
                <div>
                    <label
                        for="name"
                        class="block text-sm font-medium text-gray-700 mb-2"
                    >
                        Nom *
                    </label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent"
                        required
                    />
                </div>

                <div>
                    <label
                        for="email"
                        class="block text-sm font-medium text-gray-700 mb-2"
                    >
                        E-mail *
                    </label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent"
                        required
                    />
                </div>

                <div>
                    <label
                        for="message"
                        class="block text-sm font-medium text-gray-700 mb-2"
                    >
                        Message *
                    </label>
                    <textarea
                        id="message"
                        name="message"
                        rows="4"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent"
                        placeholder="Veuillez nous faire part de votre message ou demande."
                        required></textarea>
                </div>

                <div class="flex items-start">
                    <input
                        type="checkbox"
                        id="terms"
                        name="terms"
                        class="mt-1 h-4 w-4 text-red-500 focus:ring-red-500 border-gray-300 rounded"
                        required
                    />
                    <label for="terms" class="ml-3 block text-sm text-gray-700">
                        J'ai lu et j'accepte les
                        <a
                            href="/mentions-legales"
                            class="text-red-500 hover:underline"
                            >conditions générales</a
                        >
                        et la <a
                            href="/confidentialite"
                            class="text-red-500 hover:underline"
                            >politique de confidentialité</a
                        >.
                    </label>
                </div>

                <div class="flex items-start">
                    <input
                        type="checkbox"
                        id="newsletter"
                        name="newsletter"
                        class="mt-1 h-4 w-4 text-red-500 focus:ring-red-500 border-gray-300 rounded"
                    />
                    <label
                        for="newsletter"
                        class="ml-3 block text-sm text-gray-700"
                    >
                        Je m'inscris à la newsletter pour recevoir nos dernières
                        recettes.
                    </label>
                </div>

                <div>
                    <button
                        type="submit"
                        class="w-full bg-black text-white py-4 px-6 rounded-lg hover:bg-gray-800 transition-colors font-bold"
                    >
                        Envoyer le message
                    </button>
                </div>
            </form>
        </div>
    </section>

    <!-- Team Section -->
    <section
        id="equipe"
        class="bg-green-800 py-12 px-6 md:px-12 lg:px-24 text-white"
    >
        <h2
            class="hero-main-text text-3xl md:text-4xl text-center mb-10 uppercase tracking-wide text-white"
        >
            NOTRE ÉQUIPE
        </h2>

        <div class="space-y-4 max-w-3xl mx-auto">
            <!-- Melvyn -->
            <div class="bg-white rounded-lg p-4 flex items-center text-black">
                <div
                    class="w-16 h-16 rounded-full overflow-hidden bg-yellow-300 flex-shrink-0 mr-4"
                >
                    <Image
                        src={melvynImage || "/placeholder.svg"}
                        alt="Melvyn Philippon"
                        class="w-full h-full object-cover"
                    />
                </div>

                <div class="flex-grow">
                    <h3 class="text-lg font-bold">Melvyn Philippon</h3>
                </div>

                <div class="flex-grow-0 ml-4">
                    <p class="text-sm">
                        Melvyn est en charge de l'aspect design du projet. Il a
                        contribué à la conception visuelle en assurant une mise
                        en page harmonieuse et une expérience utilisateur
                        optimale.
                    </p>
                </div>

                <div class="flex-grow-0 ml-4 text-right">
                    <p class="font-bold text-sm">Contact :</p>
                    <a
                        href="mailto:melvyn.philippon@edu.univ-fcomte.fr"
                        class="text-sm text-green-800 hover:underline"
                    >
                        melvyn.philippon@edu.univ-fcomte.fr
                    </a>
                </div>
            </div>

            <!-- Ethan -->
            <div class="bg-white rounded-lg p-4 flex items-center text-black">
                <div
                    class="w-16 h-16 rounded-full overflow-hidden bg-green-500 flex-shrink-0 mr-4"
                >
                    <Image
                        src={ethanImage || "/placeholder.svg"}
                        alt="Ethan Omasta-Parisot"
                        class="w-full h-full object-cover"
                    />
                </div>

                <div class="flex-grow">
                    <h3 class="text-lg font-bold">Ethan Omasta-Parisot</h3>
                </div>

                <div class="flex-grow-0 ml-4">
                    <p class="text-sm">
                        Ethan s'est occupé de la partie relative du projet, en
                        gérant des aspects essentiels tels que le développement
                        et la mise en place des fonctionnalités. Son travail a
                        permis d'améliorer la visibilité du projet sur le plan
                        juridique et financier.
                    </p>
                </div>

                <div class="flex-grow-0 ml-4 text-right">
                    <p class="font-bold text-sm">Contact :</p>
                    <a
                        href="mailto:ethan.omasta@edu.univ-fcomte.fr"
                        class="text-sm text-green-800 hover:underline"
                    >
                        ethan.omasta@edu.univ-fcomte.fr
                    </a>
                </div>
            </div>

            <!-- Titouan -->
            <div class="bg-white rounded-lg p-4 flex items-center text-black">
                <div
                    class="w-16 h-16 rounded-full overflow-hidden bg-blue-500 flex-shrink-0 mr-4"
                >
                    <Image
                        src={titouanImage || "/placeholder.svg"}
                        alt="Titouan Winkel"
                        class="w-full h-full object-cover"
                    />
                </div>

                <div class="flex-grow">
                    <h3 class="text-lg font-bold">Titouan Winkel</h3>
                </div>

                <div class="flex-grow-0 ml-4">
                    <p class="text-sm">
                        Titouan s'est occupé de la partie communication et s'est
                        concentré plus particulièrement sur le site web. Il a
                        travaillé sur les fonctionnalités, la charte graphique
                        et l'optimisation de l'expérience utilisateur afin de
                        maximiser l'impact du projet.
                    </p>
                </div>

                <div class="flex-grow-0 ml-4 text-right">
                    <p class="font-bold text-sm">Contact :</p>
                    <a
                        href="mailto:titouan.winkel@edu.univ-fcomte.fr"
                        class="text-sm text-green-800 hover:underline"
                    >
                        titouan.winkel@edu.univ-fcomte.fr
                    </a>
                </div>
            </div>
        </div>

        <div class="flex justify-center mt-8">
            <a
                href="#contact"
                class="border-2 border-white text-white rounded-full px-8 py-3 text-center hover:bg-white hover:text-green-800 transition-colors"
            >
                Rejoignez-nous pour en découvrir plus
            </a>
        </div>
    </section>

    <style>
        /* Forcer la police Koulen sur le titre du hero */
        .hero-main-text {
            font-family: "Koulen", sans-serif !important;
            letter-spacing: 0.02em !important;
            font-weight: 400 !important;
        }
    </style>

    <script>
        // Contact form handling
        document.addEventListener("DOMContentLoaded", () => {
            const contactForm = document.getElementById("contact-form");
            contactForm?.addEventListener("submit", (e) => {
                e.preventDefault();

                const formData = new FormData(e.target);
                const data = Object.fromEntries(formData.entries());

                console.log("Formulaire soumis avec les données:", data);

                // Réinitialiser le formulaire
                e.target.reset();

                // Afficher un message de confirmation
                alert("Votre message a été envoyé avec succès !");
            });

            // Smooth scrolling for anchor links
            document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
                anchor.addEventListener("click", function (e) {
                    e.preventDefault();
                    const target = document.querySelector(
                        this.getAttribute("href"),
                    );
                    if (target) {
                        target.scrollIntoView({
                            behavior: "smooth",
                            block: "start",
                        });
                    }
                });
            });
        });
    </script>
</Layout>
