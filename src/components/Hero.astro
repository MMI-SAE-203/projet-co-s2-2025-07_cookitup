---
export interface Props {
    title: string;
    subtitle?: string;
    backgroundImage?: string;
    overlay?: boolean;
    className?: string;
}

const {
    title,
    subtitle,
    backgroundImage = "/images/hero-menu-semaine.jpg",
    overlay = true,
    className = "",
} = Astro.props;
---

<section class={`relative w-full h-[400px] md:h-[500px] ${className}`}>
    <img
        src={backgroundImage || "/placeholder.svg"}
        alt={title}
        class="w-full h-full object-cover"
    />

    {overlay && <div class="absolute inset-0 bg-black bg-opacity-40" />}

    <div
        class="absolute inset-0 flex flex-col items-center justify-center text-white px-4"
    >
        <h1
            class="text-4xl md:text-6xl font-bold mb-4 text-center uppercase tracking-wider"
        >
            {title}
        </h1>
        {
            subtitle && (
                <p class="text-lg md:text-xl text-center max-w-2xl">
                    {subtitle}
                </p>
            )
        }
    </div>
</section>
