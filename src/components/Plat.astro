---
// Props pour le composant Plat
const {
    id,
    nom,
    img,
    temps_prep,
    isFavorite = false,
    sponsorise = false,
    categorie = "",
    calories = "",
    regime = "",
    ingredients = "",
    preparation = "",
    commentaire = "",
} = Astro.props;

// D√©terminer l'URL de l'image
const imageUrl =
    img ||
    "/placeholder.svg?height=300&width=400&text=" + encodeURIComponent(nom);

// D√©terminer la classe de badge selon la cat√©gorie
let badgeClass = "bg-gray-500";
let categorieIcon = "";
let categorieText = "";

if (categorie) {
    const cat = categorie.toLowerCase();
    if (cat === "entree") {
        badgeClass = "bg-green-500";
        categorieIcon = "ü•ó";
        categorieText = "Entr√©e";
    } else if (cat === "plat") {
        badgeClass = "bg-red-500";
        categorieIcon = "üçΩÔ∏è";
        categorieText = "Plat";
    } else if (cat === "dessert") {
        badgeClass = "bg-purple-500";
        categorieIcon = "üç∞";
        categorieText = "Dessert";
    }
}

// D√©terminer l'ic√¥ne du r√©gime
let regimeIcon = "";
if (regime && Array.isArray(regime) && regime.length > 0) {
    // Si regime est un tableau, prendre le premier √©l√©ment
    const firstRegime = regime[0];
    if (typeof firstRegime === "string") {
        if (firstRegime.toLowerCase().includes("v√©g√©tarien")) regimeIcon = "üå±";
        else if (firstRegime.toLowerCase().includes("v√©gan")) regimeIcon = "üåø";
        else if (firstRegime.toLowerCase().includes("sans gluten"))
            regimeIcon = "üåæ";
        else if (firstRegime.toLowerCase().includes("halal")) regimeIcon = "‚ò™Ô∏è";
    }
} else if (regime && typeof regime === "string" && regime !== "Select -") {
    // Si regime est une cha√Æne (pour compatibilit√©)
    if (regime.toLowerCase().includes("v√©g√©tarien")) regimeIcon = "üå±";
    else if (regime.toLowerCase().includes("v√©gan")) regimeIcon = "üåø";
    else if (regime.toLowerCase().includes("sans gluten")) regimeIcon = "üåæ";
    else if (regime.toLowerCase().includes("halal")) regimeIcon = "‚ò™Ô∏è";
}

// G√©rer les ingr√©dients (peut √™tre un array ou une string)
let ingredientsText = "";
if (ingredients) {
    if (Array.isArray(ingredients)) {
        ingredientsText = ingredients.join(", ");
    } else {
        ingredientsText = ingredients.toString();
    }
}

// Afficher les calories seulement si > 0
const showCalories = calories && calories !== "0" && calories !== 0;

// Debug
console.log(`üñºÔ∏è Plat ${nom} - Image URL:`, imageUrl);
---

<div
    class="relative rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow group h-full max-h-[360px]"
    data-categorie={categorie}
    data-ingredients={ingredientsText}
    data-calories={calories}
    data-regime={regime}
    data-preparation={preparation}
    data-commentaire={commentaire}
>
    <!-- Image avec overlay -->
    <div class="aspect-square w-full h-48 relative overflow-hidden">
        <img
            src={imageUrl || "/placeholder.svg"}
            alt={nom}
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            loading="lazy"
            onerror="this.src='/placeholder.svg?height=300&width=400&text=Image+non+disponible'"
        />

        <!-- Overlay sombre pour meilleure lisibilit√© -->
        <div
            class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent"
        >
        </div>

        <!-- Badge sponsoris√© -->
        {
            sponsorise && (
                <div class="absolute top-2 left-2 bg-yellow-500 text-white text-xs px-2 py-1 rounded-full">
                    Sponsoris√©
                </div>
            )
        }

        <!-- Badge cat√©gorie avec ic√¥ne -->
        {
            categorie && (
                <div
                    class={`absolute top-2 right-12 ${badgeClass} text-white text-xs px-2 py-1 rounded-full flex items-center gap-1`}
                >
                    <span>{categorieIcon}</span>
                    <span>{categorieText}</span>
                </div>
            )
        }

        <!-- Bouton favori - Positionn√© en haut √† droite avec z-index √©lev√© -->
        <button
            type="button"
            class="absolute top-2 right-2 w-8 h-8 bg-white rounded-full flex items-center justify-center shadow-md hover:shadow-lg transition-shadow js-favori-btn z-20"
            data-id={id}
            aria-label={isFavorite
                ? "Retirer des favoris"
                : "Ajouter aux favoris"}
            onclick="event.stopPropagation(); event.preventDefault();"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill={isFavorite ? "red" : "none"}
                viewBox="0 0 24 24"
                stroke="currentColor"
                class="w-5 h-5"
                style={isFavorite ? "color: red;" : "color: #666;"}
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                ></path>
            </svg>
        </button>
    </div>

    <!-- Informations de la recette -->
    <div class="p-3 bg-white">
        <h3 class="font-bold text-gray-800 mb-1 line-clamp-1">{nom}</h3>

        <div class="flex flex-wrap items-center text-sm text-gray-600 gap-2">
            <!-- Temps de pr√©paration -->
            <div class="flex items-center">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4 mr-1"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                {temps_prep || "30 min"}
            </div>

            <!-- Calories si disponible et > 0 -->
            {
                showCalories && (
                    <div class="flex items-center">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-4 w-4 mr-1"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                            />
                        </svg>
                        {calories} cal
                    </div>
                )
            }

            <!-- R√©gime si disponible -->
            {
                regimeIcon && (
                    <div class="flex items-center">
                        <span class="mr-1">{regimeIcon}</span>
                        {Array.isArray(regime) && regime.length > 0
                            ? regime[0]
                            : regime}
                    </div>
                )
            }
        </div>
    </div>

    <!-- Lien vers la recette (couvre toute la carte sauf le bouton favori) -->
    <a
        href={`/recette-plat/${id}`}
        class="absolute inset-0 z-10"
        aria-label={`Voir la recette ${nom}`}></a>
</div>
