				if (isLoggedIn()) {
					const user = getCurrentUser();

					if (userDisplayName) {
						userDisplayName.textContent =
							user.pseudo || "Utilisateur";
					}
					if (userEmail && user.email) {
						userEmail.textContent = user.email;
					}

					if (user.avatar && headerUserAvatar && headerUserIcon) {
						const avatarUrl = `https://cookit-up.titouan-winkel.fr/api/files/users/${user.id}/${user.avatar}`;
						headerUserAvatar.src = avatarUrl;
						headerUserAvatar.classList.remove("hidden");
						headerUserIcon.classList.add("hidden");
					} else if (headerUserAvatar && headerUserIcon) {
						headerUserAvatar.classList.add("hidden");
						headerUserIcon.classList.remove("hidden");
					}

					if (menuUserAvatar) {
						if (user.avatar) {
							const avatarUrl = `https://cookit-up.titouan-winkel.fr/api/files/users/${user.id}/${user.avatar}`;
							menuUserAvatar.src = avatarUrl;
						} else {
							menuUserAvatar.src = "/placeholder.svg";
						}
					}

					if (user.cookup) {
						if (cookupBadge) cookupBadge.classList.remove("hidden");
						if (userCookupStatus)
							userCookupStatus.classList.remove("hidden");
					} else {
						if (cookupBadge) cookupBadge.classList.add("hidden");
						if (userCookupStatus)
							userCookupStatus.classList.add("hidden");
					}

					// Desktop
					if (guestMenu) guestMenu.classList.add("hidden");
					if (authMenu) authMenu.classList.remove("hidden");

					// Mobile
					if (mobileGuestMenu)
						mobileGuestMenu.classList.add("hidden");
					if (mobileAuthMenu)
						mobileAuthMenu.classList.remove("hidden");
				} else {
					// Desktop
					if (guestMenu) guestMenu.classList.remove("hidden");
					if (authMenu) authMenu.classList.add("hidden");

					// Mobile
					if (mobileGuestMenu)
						mobileGuestMenu.classList.remove("hidden");
					if (mobileAuthMenu) mobileAuthMenu.classList.add("hidden");

					if (headerUserAvatar && headerUserIcon) {
						headerUserAvatar.classList.add("hidden");
						headerUserIcon.classList.remove("hidden");
					}

					if (cookupBadge) cookupBadge.classList.add("hidden");
					if (userCookupStatus)
						userCookupStatus.classList.add("hidden");
				}
			}

			document.addEventListener("DOMContentLoaded", () => {
				const userMenuButton =
					document.getElementById("userMenuButton");
				const userMenu = document.getElementById("userMenu");
				const logoutButton = document.getElementById("logoutButton");
				const mobileLogoutButton =
					document.getElementById("mobileLogoutButton");
				const mobileMenuButton =
					document.getElementById("mobileMenuButton");
				const mobileMenu = document.getElementById("mobileMenu");

				updateAuthUI();

				// Menu utilisateur desktop
				userMenuButton?.addEventListener("click", (e) => {
					e.stopPropagation();
					const expanded =
						userMenuButton.getAttribute("aria-expanded") === "true";
					userMenuButton.setAttribute("aria-expanded", !expanded);
					userMenu?.classList.toggle("hidden");
				});

				// Menu mobile
				mobileMenuButton?.addEventListener("click", (e) => {
					e.stopPropagation();
					mobileMenu?.classList.toggle("hidden");
				});

				// Fermer les menus si on clique ailleurs
				document.addEventListener("click", (event) => {
					const userContainer =
						document.getElementById("userMenuContainer");
					if (
						userContainer &&
						!userContainer.contains(event.target)
					) {
						userMenu?.classList.add("hidden");
						userMenuButton?.setAttribute("aria-expanded", "false");
					}

					if (
						mobileMenu &&
						!mobileMenu.contains(event.target) &&
						!mobileMenuButton?.contains(event.target)
					) {
						mobileMenu.classList.add("hidden");
					}
				});

				// DÃ©connexion
				const handleLogout = (e) => {
					e.preventDefault();
					logout();
					window.location.href = "/";
				};

				logoutButton?.addEventListener("click", handleLogout);
				mobileLogoutButton?.addEventListener("click", handleLogout);

				document.addEventListener("userLogin", updateAuthUI);
				document.addEventListener("userLogout", updateAuthUI);
				document.addEventListener("userUpdate", updateAuthUI);
			});
		</script>
	</body>
