---
import "../styles/global.css";
const { title = "Cookit-UP" } = Astro.props;
import { Image } from "astro:assets";
import logo from "../assets/logo_noir.svg";
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="overflow-x-hidden">
		<!-- Header Cookit-UP -->
		<header
			class="bg-white text-black px-4 sm:px-6 py-4 flex items-center shadow-md relative"
		>
			<!-- Logo (à gauche) - Cliquable vers l'accueil -->
			<a
				href="/"
				class="flex items-center space-x-2 hover:opacity-80 transition flex-shrink-0"
			>
				<Image
					src={logo || "/placeholder.svg"}
					alt="Logo Cookit-UP"
					class="h-22 w-22"
				/>
				<span class="font-bold text-lg">Cookit-UP</span>
			</a>

			<!-- Menu hamburger (mobile uniquement) -->
			<button
				id="mobileMenuButton"
				class="md:hidden ml-auto p-2 rounded-md hover:bg-gray-100 transition"
				aria-label="Menu"
			>
				<svg
					class="w-6 h-6"
					fill="none"
					stroke="currentColor"
					viewBox="0 0 24 24"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M4 6h16M4 12h16M4 18h16"></path>
				</svg>
			</button>

			<!-- Navigation desktop -->
			<nav
				class="hidden md:flex flex-1 justify-end space-x-6 font-bold text-sm ml-10"
			>
				<a
					href="/recette-plat"
					class="hover:underline whitespace-nowrap">RECETTES</a
				>
				<a
					href="/menu-semaine"
					class="hover:underline whitespace-nowrap"
					>MENU DE LA SEMAINE</a
				>
				<a href="/pass-cookup" class="hover:underline whitespace-nowrap"
					>COOKUP</a
				>
				<a href="/partenaires" class="hover:underline whitespace-nowrap"
					>RÉDUCTIONS</a
				>
				<a href="/a-propos" class="hover:underline whitespace-nowrap"
					>A PROPOS</a
				>

				<!-- Menu déroulant Communauté -->
				<a href="/avis-site" class="hover:underline whitespace-nowrap"
					>DONNEZ VOTRE AVIS</a
				>
			</nav>

			<!-- Icônes à droite (desktop) -->
			<div class="hidden md:flex items-center space-x-4 ml-6">
				<!-- Badge Cookup Pass -->
				<div id="cookupBadge" class="hidden">
					<div
						class="bg-gradient-to-r from-yellow-400 to-orange-500 text-white px-3 py-1 rounded-full text-xs font-bold"
					>
						⭐ COOKUP
					</div>
				</div>

				<!-- Menu utilisateur -->
				<div class="relative" id="userMenuContainer">
					<button
						id="userMenuButton"
						class="h-10 w-10 rounded-full border border-black flex items-center justify-center hover:bg-gray-100 hover:border-yellow-500 hover:text-yellow-500 transition-all overflow-hidden cursor-pointer"
						aria-expanded="false"
						title="Menu utilisateur"
					>
						<img
							id="headerUserAvatar"
							src="/placeholder.svg"
							alt="Avatar"
							class="w-full h-full object-cover rounded-full hidden"
						/>
						<svg
							id="headerUserIcon"
							xmlns="http://www.w3.org/2000/svg"
							class="h-6 w-6"
							fill="none"
							viewBox="0 0 24 24"
							stroke="currentColor"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
							></path>
						</svg>
					</button>

					<!-- Menu déroulant utilisateur -->
					<div
						id="userMenu"
						class="absolute right-0 mt-2 w-56 bg-white rounded-lg shadow-lg py-2 z-50 hidden border border-gray-200"
					>
						<!-- Menu pour utilisateur non connecté -->
						<div id="guestMenu">
							<div class="px-4 py-3 border-b border-gray-200">
								<p class="text-sm text-gray-600">
									Vous n'êtes pas connecté
								</p>
							</div>
							<a
								href="/connexion"
								class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="h-4 w-4 mr-2"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"
									></path>
								</svg>
								Se connecter
							</a>
							<a
								href="/inscription"
								class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="h-4 w-4 mr-2"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"
									></path>
								</svg>
								S'inscrire
							</a>
						</div>

						<!-- Menu pour utilisateur connecté -->
						<div id="authMenu" class="hidden">
							<div class="px-4 py-3 border-b border-gray-200">
								<div class="flex items-center space-x-3">
									<img
										id="menuUserAvatar"
										src="/placeholder.svg"
										alt="Avatar"
										class="w-10 h-10 rounded-full object-cover"
									/>
									<div>
										<p
											class="text-sm font-medium text-gray-900"
											id="userDisplayName"
										>
											Utilisateur
										</p>
										<p
											class="text-sm text-gray-500"
											id="userEmail"
										>
											email@example.com
										</p>
									</div>
								</div>
								<div id="userCookupStatus" class="mt-2 hidden">
									<span
										class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gradient-to-r from-yellow-400 to-orange-500 text-white"
									>
										⭐ Cookup Pass
									</span>
								</div>
							</div>
							<a
								href="/profil"
								class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="h-4 w-4 mr-2"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
									></path>
								</svg>
								Mon profil
							</a>
							<a
								href="/favoris"
								class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="h-4 w-4 mr-2"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
									></path>
								</svg>
								Mes favoris
							</a>
							<a
								href="/mes-recettes"
								class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="h-4 w-4 mr-2"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
									></path>
								</svg>
								Mes recettes
							</a>

							<div class="border-t border-gray-200 mt-2 pt-2">
								<button
									id="logoutButton"
									class="flex items-center w-full px-4 py-2 text-sm text-red-600 hover:bg-gray-100"
								>
									<svg
										xmlns="http://www.w3.org/2000/svg"
										class="h-4 w-4 mr-2"
										fill="none"
										viewBox="0 0 24 24"
										stroke="currentColor"
									>
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
										></path>
									</svg>
									Se déconnecter
								</button>
							</div>
						</div>
					</div>
				</div>

				<!-- Favoris -->
				<a
					href="/favoris"
					class="h-10 w-10 rounded-full border border-black flex items-center justify-center hover:bg-gray-100 hover:border-yellow-500 hover:text-yellow-500 transition-all cursor-pointer"
					title="Mes favoris"
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						class="h-6 w-6"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
						></path>
					</svg>
				</a>
			</div>
		</header>

		<!-- Menu mobile (caché par défaut) -->
		<div
			id="mobileMenu"
			class="md:hidden bg-white border-t border-gray-200 hidden"
		>
			<div class="px-4 py-2 space-y-1">
				<!-- Navigation principale -->
				<a
					href="/recette-plat"
					class="block px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 rounded-md"
					>RECETTES</a
				>
				<a
					href="/menu-semaine"
					class="block px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 rounded-md"
					>MENU DE LA SEMAINE</a
				>
				<a
					href="/pass-cookup"
					class="block px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 rounded-md"
					>COOKUP</a
				>
				<a
					href="/partenaires"
					class="block px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 rounded-md"
					>RÉDUCTIONS</a
				>
				<a
					href="/a-propos"
					class="block px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 rounded-md"
					>A PROPOS</a
				>

				<!-- Donnez votre avis -->
				<div class="border-t border-gray-200 pt-2 mt-2">
					<a
						href="/avis-site"
						class="block px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 rounded-md"
						>💬 DONNEZ VOTRE AVIS</a
					>
				</div>

				<!-- Actions utilisateur -->
				<div class="border-t border-gray-200 pt-2 mt-2">
					<div id="mobileGuestMenu">
						<a
							href="/connexion"
							class="block px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md"
							>🔐 Se connecter</a
						>
						<a
							href="/inscription"
							class="block px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md"
							>📝 S'inscrire</a
						>
					</div>
					<div id="mobileAuthMenu" class="hidden">
						<a
							href="/profil"
							class="block px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md"
							>👤 Mon profil</a
						>
						<a
							href="/favoris"
							class="block px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md"
							>❤️ Mes favoris</a
						>
						<a
							href="/mes-recettes"
							class="block px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md"
							>📚 Mes recettes</a
						>
						<button
							id="mobileLogoutButton"
							class="block w-full text-left px-3 py-2 text-sm text-red-600 hover:bg-gray-100 rounded-md"
							>🚪 Se déconnecter</button
						>
					</div>
				</div>
			</div>
		</div>

		<!-- Barre noire fine sous le header -->
		<div class="h-px bg-black"></div>

		<!-- Contenu de la page -->
		<main class="min-h-screen">
			<slot />
		</main>

		<!-- Footer -->
		<footer class="bg-black text-white text-sm">
			<!-- Ligne jaune avec logo et bouton -->
			<div
				class="bg-yellow-500 text-white flex flex-col sm:flex-row justify-between items-center px-4 sm:px-6 py-4 gap-4"
			>
				<!-- Logo du site -->
				<a
					href="/"
					class="flex items-center space-x-2 hover:opacity-80 transition"
				>
					<Image
						src={logo || "/placeholder.svg"}
						alt="Logo Cookit-UP"
						class="h-10 w-10 bg-white rounded-full p-1"
					/>
					<span class="text-lg font-semibold">Cookit-UP</span>
				</a>

				<!-- Lien partenaires -->
				<a
					href="/partenaires"
					class="font-bold uppercase hover:underline text-center"
				>
					Voir nos partenaires
				</a>
			</div>

			<!-- Menu principal + contact -->
			<div
				class="px-4 sm:px-6 py-6 flex flex-col md:flex-row md:justify-between md:items-start bg-black text-white gap-6"
			>
				<!-- Navigation -->
				<div class="space-y-2 font-semibold uppercase tracking-wide">
					<a href="/menu-semaine" class="block hover:underline"
						>.Menu de la semaine</a
					>
					<a href="/cookup" class="block hover:underline">.Cookup</a>
					<a href="/a-propos" class="block hover:underline"
						>.A propos</a
					>
					<a href="/avis-site" class="block hover:underline"
						>.Donner son avis</a
					>
				</div>

				<!-- Contact -->
				<div>
					<p class="uppercase font-bold mb-1">Nous contactez :</p>
					<p class="font-semibold">01 23 45 67 89</p>
					<p class="font-semibold">contact@cookit-up.com</p>
				</div>
			</div>

			<hr class="border-gray-700 mx-4 sm:mx-6" />

			<!-- Mentions légales + Réseaux sociaux -->
			<div
				class="px-4 sm:px-6 py-4 flex flex-col md:flex-row md:justify-between md:items-center bg-black text-white text-xs space-y-4 md:space-y-0"
			>
				<!-- Mentions -->
				<div
					class="flex flex-wrap gap-2 justify-center md:justify-start"
				>
					<span class="font-bold">© Cookit-UP 2025</span>
					<a href="/confidentialite" class="hover:underline"
						>Charte de confidentialité</a
					>
					<a href="/mentions-legales" class="hover:underline"
						>Mentions légales</a
					>
					<a href="/cookies" class="hover:underline"
						>Gestion des cookies</a
					>
					<a href="/cgu" class="hover:underline">CGU</a>
				</div>

				<!-- Icônes réseaux sociaux -->
				<div class="flex space-x-4 justify-center md:justify-end">
					<a
						href="#"
						class="h-8 w-8 rounded-full border border-white flex items-center justify-center hover:bg-gray-800 transition"
						title="Facebook"
					>
						<svg class="w-4 h-4 fill-current" viewBox="0 0 24 24">
							<path
								d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
							></path>
						</svg>
					</a>
					<a
						href="#"
						class="h-8 w-8 rounded-full border border-white flex items-center justify-center hover:bg-gray-800 transition"
						title="Instagram"
					>
						<svg class="w-4 h-4 fill-current" viewBox="0 0 24 24">
							<path
								d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
							></path>
						</svg>
					</a>
					<a
						href="#"
						class="h-8 w-8 rounded-full border border-white flex items-center justify-center hover:bg-gray-800 transition"
						title="YouTube"
					>
						<svg class="w-4 h-4 fill-current" viewBox="0 0 24 24">
							<path
								d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
							></path>
						</svg>
					</a>
				</div>
			</div>
		</footer>

		<!-- Script pour la gestion de l'authentification et du menu mobile -->
		<script>
			import PocketBase from "pocketbase";
			import { isLoggedIn, getCurrentUser, logout } from "../js/auth.js";

			const pb = new PocketBase("https://cookit-up.titouan-winkel.fr");

			function updateAuthUI() {
				const guestMenu = document.getElementById("guestMenu");
				const authMenu = document.getElementById("authMenu");
				const mobileGuestMenu =
					document.getElementById("mobileGuestMenu");
				const mobileAuthMenu =
					document.getElementById("mobileAuthMenu");
				const userDisplayName =
					document.getElementById("userDisplayName");
				const userEmail = document.getElementById("userEmail");
				const cookupBadge = document.getElementById("cookupBadge");
				const userCookupStatus =
					document.getElementById("userCookupStatus");
				const headerUserAvatar =
					document.getElementById("headerUserAvatar");
				const headerUserIcon =
					document.getElementById("headerUserIcon");
				const menuUserAvatar =
					document.getElementById("menuUserAvatar");

				if (isLoggedIn()) {
					const user = getCurrentUser();

					if (userDisplayName) {
						userDisplayName.textContent =
							user.pseudo || "Utilisateur";
					}
					if (userEmail && user.email) {
						userEmail.textContent = user.email;
					}

					if (user.avatar && headerUserAvatar && headerUserIcon) {
						const avatarUrl = `https://cookit-up.titouan-winkel.fr/api/files/users/${user.id}/${user.avatar}`;
						headerUserAvatar.src = avatarUrl;
						headerUserAvatar.classList.remove("hidden");
						headerUserIcon.classList.add("hidden");
					} else if (headerUserAvatar && headerUserIcon) {
						headerUserAvatar.classList.add("hidden");
						headerUserIcon.classList.remove("hidden");
					}

					if (menuUserAvatar) {
						if (user.avatar) {
							const avatarUrl = `https://cookit-up.titouan-winkel.fr/api/files/users/${user.id}/${user.avatar}`;
							menuUserAvatar.src = avatarUrl;
						} else {
							menuUserAvatar.src = "/placeholder.svg";
						}
					}

					if (user.cookup) {
						if (cookupBadge) cookupBadge.classList.remove("hidden");
						if (userCookupStatus)
							userCookupStatus.classList.remove("hidden");
					} else {
						if (cookupBadge) cookupBadge.classList.add("hidden");
						if (userCookupStatus)
							userCookupStatus.classList.add("hidden");
					}

					// Desktop
					if (guestMenu) guestMenu.classList.add("hidden");
					if (authMenu) authMenu.classList.remove("hidden");

					// Mobile
					if (mobileGuestMenu)
						mobileGuestMenu.classList.add("hidden");
					if (mobileAuthMenu)
						mobileAuthMenu.classList.remove("hidden");
				} else {
					// Desktop
					if (guestMenu) guestMenu.classList.remove("hidden");
					if (authMenu) authMenu.classList.add("hidden");

					// Mobile
					if (mobileGuestMenu)
						mobileGuestMenu.classList.remove("hidden");
					if (mobileAuthMenu) mobileAuthMenu.classList.add("hidden");

					if (headerUserAvatar && headerUserIcon) {
						headerUserAvatar.classList.add("hidden");
						headerUserIcon.classList.remove("hidden");
					}

					if (cookupBadge) cookupBadge.classList.add("hidden");
					if (userCookupStatus)
						userCookupStatus.classList.add("hidden");
				}
			}

			document.addEventListener("DOMContentLoaded", () => {
				const userMenuButton =
					document.getElementById("userMenuButton");
				const userMenu = document.getElementById("userMenu");
				const logoutButton = document.getElementById("logoutButton");
				const mobileLogoutButton =
					document.getElementById("mobileLogoutButton");
				const mobileMenuButton =
					document.getElementById("mobileMenuButton");
				const mobileMenu = document.getElementById("mobileMenu");

				updateAuthUI();

				// Menu utilisateur desktop
				userMenuButton?.addEventListener("click", (e) => {
					e.stopPropagation();
					const expanded =
						userMenuButton.getAttribute("aria-expanded") === "true";
					userMenuButton.setAttribute("aria-expanded", !expanded);
					userMenu?.classList.toggle("hidden");
				});

				// Menu mobile
				mobileMenuButton?.addEventListener("click", (e) => {
					e.stopPropagation();
					mobileMenu?.classList.toggle("hidden");
				});

				// Fermer les menus si on clique ailleurs
				document.addEventListener("click", (event) => {
					const userContainer =
						document.getElementById("userMenuContainer");
					if (
						userContainer &&
						!userContainer.contains(event.target)
					) {
						userMenu?.classList.add("hidden");
						userMenuButton?.setAttribute("aria-expanded", "false");
					}

					if (
						mobileMenu &&
						!mobileMenu.contains(event.target) &&
						!mobileMenuButton?.contains(event.target)
					) {
						mobileMenu.classList.add("hidden");
					}
				});

				// Déconnexion
				const handleLogout = (e) => {
					e.preventDefault();
					logout();
					window.location.href = "/";
				};

				logoutButton?.addEventListener("click", handleLogout);
				mobileLogoutButton?.addEventListener("click", handleLogout);

				document.addEventListener("userLogin", updateAuthUI);
				document.addEventListener("userLogout", updateAuthUI);
				document.addEventListener("userUpdate", updateAuthUI);
			});
		</script>
	</body>
